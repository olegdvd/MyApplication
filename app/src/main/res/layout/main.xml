<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/main">

    <TextView
        android:id="@+id/get_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_number"
        android:layout_above="@+id/sim_operator_name"
        android:layout_toRightOf="@+id/text3"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM Operator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sim_operator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_number"
        android:layout_alignTop="@+id/text3"
        android:layout_alignLeft="@+id/get_operator"
        android:layout_alignStart="@+id/get_operator" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM Operator Name"
        android:layout_below="@+id/text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Operator"
        android:layout_below="@+id/text3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/net_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_number"
        android:layout_alignTop="@+id/text4"
        android:layout_alignLeft="@+id/sim_operator_name"
        android:layout_alignStart="@+id/sim_operator_name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Operator Name"
        android:layout_below="@+id/text4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/net_operator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_number"
        android:layout_below="@+id/net_operator"
        android:layout_alignLeft="@+id/net_operator"
        android:layout_alignStart="@+id/net_operator" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM Country"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/get_sim_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_number"
        android:layout_alignTop="@+id/text5"
        android:layout_alignLeft="@+id/net_operator_name"
        android:layout_alignStart="@+id/net_operator_name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile number"
        android:layout_below="@+id/text5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/get_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_number"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/get_sim_country"
        android:layout_alignStart="@+id/get_sim_country" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current plan"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/get_current_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_number"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/get_line1"
        android:layout_alignStart="@+id/get_line1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тариф КС"
        android:id="@+id/get_plan_btn"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/get_current_plan"
        android:layout_toStartOf="@+id/get_current_plan" />

</RelativeLayout>
